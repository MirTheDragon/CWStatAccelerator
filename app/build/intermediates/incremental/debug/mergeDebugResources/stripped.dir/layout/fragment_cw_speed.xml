<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/frequency_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency: 600 Hz" />

        <SeekBar
            android:id="@+id/frequency_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/min_training_speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Training Speed: 10 WPM" />

        <SeekBar
            android:id="@+id/min_training_speed_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Speed: 15 WPM" />

        <SeekBar
            android:id="@+id/speed_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/max_training_speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Training Speed: 80 WPM" />

        <SeekBar
            android:id="@+id/max_training_speed_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ramp_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ramp Time: 0 ms" />

        <SeekBar
            android:id="@+id/ramp_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/snr_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SNR: 100% (âˆž dB)" />

        <SeekBar
            android:id="@+id/snr_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="99" />

    </LinearLayout>
</ScrollView>
